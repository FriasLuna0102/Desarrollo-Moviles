<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageNoContacts"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/no_contacts"
        android:contentDescription="No contacts image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textNoContacts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/textNoContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No tienes contactos aÃºn"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text_color"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageNoContacts"
        app:layout_constraintBottom_toTopOf="@+id/textNoContactsDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textNoContactsDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Agrega algunos contactos para comenzar a chatear"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textNoContacts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>